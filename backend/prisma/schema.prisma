generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String           @id @default(auto()) @map("_id") @db.ObjectId
  username   String           @unique
  email      String           @unique
  password   String
  name       String
  surname    String
  favourites FavouriteEvent[]
}

model FavouriteEvent {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  eventId    String  @unique
  eventName  String
  eventImage String
  artistName String
  venueName  String
  cityName   String
  eventDate  String
  User       User?   @relation(fields: [userId], references: [id])
  userId     String? @db.ObjectId
}
